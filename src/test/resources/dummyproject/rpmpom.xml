<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                      http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>de.maven.plugins.test</groupId>
	<artifactId>DummyProject</artifactId>
	<version>1.0.0</version>
	<packaging>jar</packaging>
	<name>Test mvn-pkg-plugin</name>

	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.1</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
					<encoding>utf-8</encoding>
				</configuration>
			</plugin>
			<plugin>
				<groupId>de.tarent.maven.plugins</groupId>
				<artifactId>maven-pkg-plugin</artifactId>
				<version>4.0</version>
				<configuration>
					<signPassPhrase>123456</signPassPhrase>
					<targetConfigurations>

						<targetConfiguration>
							<target>centos_5_6_target_sign</target>
							<parent>centos_5_6_target_simple</parent>
							<sign>true</sign>
							<distros>
								<distro>centos_5_6</distro>
							</distros>							
						</targetConfiguration>
						
						<targetConfiguration>
							<target>centos_5_6_target_simple_with_revision</target>
							<parent>centos_5_6_target_simple</parent>
							<revision>22</revision>
						</targetConfiguration>

						<targetConfiguration>
							<target>centos_5_6_target_simple</target>
							<maintainer>Test User MVNPKGPLUGIN &lt;no@address.com&gt;</maintainer>
							<distros>
								<distro>centos_5_6</distro>
							</distros>
							<section>misc</section>
							<source>dummysource</source>
							<architecture>x86_64</architecture>
						</targetConfiguration>
						
						<targetConfiguration>
							<target>centos_5_6_target_manual_dependencies</target>							
							<mainClass>de.tarent.maven.plugins.dummytest</mainClass>
							<maintainer>Test User MVNPKGPLUGIN &lt;no@address.com&gt;</maintainer>
							<distros>
								<distro>centos_5_6</distro>
							</distros>

							<source>dummysource</source>
							<architecture>x86_64</architecture>
							<manualDependencies>
								<string>kdm</string>
								<string>usbmount</string>
								<string>blackbox</string>
							</manualDependencies>
						</targetConfiguration>
						
						<targetConfiguration>
							<target>centos_5_6_target_external_artifact</target>
							<parent>centos_5_6_target_simple</parent>
							<distros>
								<distro>centos_5_6</distro>
							</distros>
							<source>dummysource</source>
							<architecture>x86_64</architecture>
							<manualDependencies>
								<string>kdm</string>
								<string>usbmount</string>
								<string>blackbox</string>
							</manualDependencies>
							<sysconfFiles>
								<sysconfFile>
									<from>dummy.properties</from>
									<to>dummyProject/dummy.properties</to>
									<rename>true</rename>
								</sysconfFile>
							</sysconfFiles>
						</targetConfiguration>
						
						<targetConfiguration>
							<target>centos_5_6_target_external_sbinfile</target>
							<parent>centos_5_6_target_simple</parent>
							<distros>
								<distro>centos_5_6</distro>
							</distros>
							<source>dummysource</source>
							<architecture>x86_64</architecture>
							<manualDependencies>
								<string>kdm</string>
								<string>usbmount</string>
								<string>blackbox</string>
							</manualDependencies>
							<sBinFiles>
								<sBinFile>
									<from>dummy.properties</from>
									<to>dummy.properties</to>
								</sBinFile>
							</sBinFiles>
						</targetConfiguration>
						
					</targetConfigurations>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
