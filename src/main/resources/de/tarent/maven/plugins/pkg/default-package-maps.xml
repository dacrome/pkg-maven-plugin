<package-maps>
	<version>1.0</version>

<!--
	Allows to spread information through several files. 
	Content must be a valid URL!
	
	<include>file://otherFile.xml</include>
-->

	<distro>
		<id>debian_etch</id>
		<label>Debian GNU/Linux Etch</label>
		<packaging>deb</packaging>
		<defaultJarPath>/usr/share/java</defaultJarPath>
		<defaultDependencyLine>java-gcj-compat | java2-runtime</defaultDependencyLine>
		
		<map>
			<!-- This replaces proprietary Java Activation Framework with GNU JAF. -->
			<entry>
				<artifactId>activation</artifactId>
				<dependencyLine>libgnujaf-java</dependencyLine>
				<jars>
					<jar>activation-1.1.jar</jar>
				</jars>
			</entry>

			<!-- Replaces proprietary JavaMail implementation with GNU Mail. -->
			<entry>
				<artifactId>mail</artifactId>
				<dependencyLine>libgnumail-java</dependencyLine>
				<jars>
					<jar>gnumail.jar</jar>
					<jar>gnumail-providers.jar</jar>
				</jars>
			</entry>

			<entry>
				<artifactId>bouncycastle-jdk14-provider</artifactId>
				<dependencyLine>libbcprov-java</dependencyLine>
				<jars>
					<jar>bcprov.jar</jar>
				</jars>
			</entry>

			<entry>
				<artifactId>log4j</artifactId>
				<dependencyLine>liblog4j1.2-java</dependencyLine>
				<jars>
					<jar>log4j-1.2.jar</jar>
				</jars>
			</entry>

			<!-- Everything can be automatically derived from the artifactId -->
			<entry>
				<artifactId>junit</artifactId>
			</entry>

			<entry>
				<artifactId>velocity</artifactId>
			</entry>

			<entry>
				<artifactId>velocity-dep</artifactId>
				<!-- No equivalent in distro but classes provided by velocity. -->
				<ignore/>
			</entry>

			<!-- Eclipse RCP stuff -->
			<entry>
				<artifactId>org.eclipse.osgi_3.1.0</artifactId>
				<dependencyLine>eclipse-rcp-common</dependencyLine>
				<jars>
					<jar>/usr/share/eclipse/plugins/org.eclipse.osgi_3.1.2.jar</jar>
				</jars>
			</entry>

			<entry>
				<artifactId>org.eclipse.core.runtime_3.1.0</artifactId>
				<dependencyLine>eclipse-rcp-common</dependencyLine>
				<jars>
					<jar>/usr/share/eclipse/plugins/org.eclipse.core.runtime_3.1.2.jar</jar>
				</jars>
			</entry>

			<entry>
				<artifactId>swt-gtk-linux</artifactId>
				<dependencyLine>libswt3.1-gtk-java</dependencyLine>
				<jars>
					<jar>/usr/lib/java/swt.jar</jar>
				</jars>
			</entry>

			<entry>
				<artifactId>xmlrpc</artifactId>
				<dependencyLine>libxmlrpc-java</dependencyLine>
			</entry>

			<entry>
				<artifactId>xalan</artifactId>
				<dependencyLine>libxalan2-java</dependencyLine>
				<jars>
					<jar>xalan2.jar</jar>
				</jars>
			</entry>

		<!-- OpenOffice.org stuff -->
			<entry>
				<artifactId>unoil</artifactId>
				<dependencyLine>openoffice.org-java</dependencyLine>
				<jars>
					<jar>/usr/share/java/openoffice/unoil.jar</jar>
				</jars>
			</entry>
			<entry>
				<artifactId>ridl</artifactId>
				<dependencyLine>openoffice.org-java</dependencyLine>
				<jars>
					<jar>/usr/share/java/openoffice/ridl.jar</jar>
				</jars>
			</entry>
			<entry>
				<artifactId>jh</artifactId>
				<dependencyLine>openoffice.org-java</dependencyLine>
				<jars>
					<jar>/usr/share/java/openoffice/jh.jar</jar>
				</jars>
			</entry>
			<entry>
				<artifactId>juh</artifactId>
				<dependencyLine>openoffice.org-java</dependencyLine>
				<jars>
					<jar>/usr/share/java/openoffice/juh.jar</jar>
				</jars>
			</entry>
			<entry>
				<artifactId>jurt</artifactId>
				<dependencyLine>openoffice.org-java</dependencyLine>
				<jars>
					<jar>/usr/share/java/openoffice/jurt.jar</jar>
				</jars>
			</entry>

		</map>
	</distro>

	<distro>
		<id>debian_lenny</id>
		<label>Debian GNU/Linux Lenny</label>
		<inherit>debian_etch</inherit>

		<map>
			<entry>
				<artifactId>swt-gtk-linux</artifactId>
				<dependencyLine>libswt3.2-gtk-java | libswt3.3-gtk-java</dependencyLine>
				<jars>
					<jar>swt-gtk.jar</jar>
				</jars>
			</entry>

			<entry>
				<artifactId>asm</artifactId>
				<dependencyLine>libasm3-java</dependencyLine>
				<jars>
					<jar>asm3.jar</jar>
				</jars>
			</entry>

			<entry>
				<artifactId>asm-util</artifactId>
				<dependencyLine>libasm3-java</dependencyLine>
				<jars>
					<jar>asm3-util.jar</jar>
				</jars>
			</entry>

			<entry>
				<artifactId>asm-commons</artifactId>
				<dependencyLine>libasm3-java</dependencyLine>
				<jars>
					<jar>asm3-commons.jar</jar>
				</jars>
			</entry>

			<entry>
				<artifactId>asm-tree</artifactId>
				<dependencyLine>libasm3-java</dependencyLine>
				<jars>
					<jar>asm3-tree.jar</jar>
				</jars>
			</entry>

		</map>
	</distro>

	<!-- OpenMoko late 2007 snapshot -->
	<distro>
		<id>openmoko-2007.11</id>
		<label>OpenMoko 2007.11</label>
		<packaging>ipk</packaging>
		<defaultJarPath>/usr/share/java</defaultJarPath>
		<defaultDependencyLine>java2-runtime</defaultDependencyLine>

		<map>
			<!--
				Synthetic dependency is resolved to create a dependency on the 
				classpath-gtk package.
			-->
			<entry>
				<artifactId>awt</artifactId>
				<dependencyLine>classpath-gtk</dependencyLine>
				<jars/>
			</entry>

			<entry>
				<artifactId>swt-gtk-linux</artifactId>
				<dependencyLine>libswt3.4-gtk-java</dependencyLine>
				<jars>
					<jar>swt.jar</jar>
					<jar>swt-gtk.jar</jar>
					<jar>swt-pi.jar</jar>
					<jar>swt-cairo.jar</jar>
				</jars>
			</entry>

			<entry>
				<artifactId>dbus-java</artifactId>
				<dependencyLine>libdbus-java</dependencyLine>
			</entry>

			<entry>
				<artifactId>libmatthew-java</artifactId>
				<dependencyLine>libdbus-java</dependencyLine>
				<jars>
					<jar>io.jar</jar>
					<jar>cgi.jar</jar>
					<jar>hexdump.jar</jar>
					<jar>unix.jar</jar>
				</jars>
			</entry>

			<entry>
				<artifactId>xmlpull</artifactId>
				<dependencyLine>libxmlpull-java</dependencyLine>
				<!-- Needed for cacao-cldc in bootclasspath. -->
				<boot/>
				<jars>
					<jar>xmlpull.jar</jar>
				</jars>
			</entry>

			<entry>
				<artifactId>kxml2</artifactId>
				<dependencyLine>libkxml2-java</dependencyLine>
				<!-- Needed for cacao-cldc in bootclasspath. -->
				<boot/>
				<jars>
					<jar>kxml2.jar</jar>
				</jars>
			</entry>

		</map>
	</distro>
	
</package-maps>
